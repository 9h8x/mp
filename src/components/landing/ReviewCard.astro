---
interface Props {
  img?: string;
  name?: string;
  username?: string;
  body?: string;
}

const { img, name, username, body } = Astro.props;

import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
---

<Card className="w-full max-w-md">
  <CardHeader className="flex flex-row items-center space-y-0 gap-4">
    <img
      class="rounded-full w-12 h-12"
      width="48"
      height="48"
      alt={`${name}'s avatar`}
      src={img} loading="eager"
    />
    <div class="flex flex-col items-start">
      <CardTitle className="text-lg">{name}</CardTitle>
      
    </div>
  </CardHeader>
  <CardContent>
    <p class="text-sm">{body}</p>
  </CardContent>
</Card>
